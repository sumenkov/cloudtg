{
  "productName": "CloudTG",
  "version": "1.0.0",
  "identifier": "com.cloudtg.desktop",
  "build": {
    "beforeDevCommand": "npm --workspace ui run dev",
    "beforeBuildCommand": "npm --workspace ui run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "CloudTG",
        "width": 1100,
        "height": 760
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "main"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "resources": [
      "resources/tdlib"
    ]
  }
}
